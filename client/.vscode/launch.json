{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via Yarn",
            "runtimeExecutable": "yarn",
            "cwd": "${workspaceRoot}",
            "stopOnEntry": false,
            "port": 1234,
            "env": {
                "PARCEL_WORKERS": "0" // Run workers in same thread for debugging
            },        
            "runtimeArgs": [
                "run",
                "start"
            ]
        }
    ]
}